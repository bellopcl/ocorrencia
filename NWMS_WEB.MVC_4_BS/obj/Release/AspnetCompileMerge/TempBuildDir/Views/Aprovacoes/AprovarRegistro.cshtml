            @Html.LabelFor(m => m.CodCliente, new { @class = "col-md-2 control-label" })
            <div class="col-md-2">
                <div class="input-group">
                    @Html.TextBoxFor(m => m.CodCliente, new { @class = "form-control input-smgroup", @id = "CodigoClienteConferenciaItem" })
